                @Html.LabelFor(m => m.EmpID)
                @Html.TextBoxFor(m => m.EmpID)
            </li>
            <li>
                @Html.LabelFor(m => m.Pname)
                @Html.TextBoxFor(m => m.Pname)
            </li>
            <li>
                @Html.LabelFor(m => m.PEmailID)
                @Html.TextBoxFor(m => m.PEmailID)
            </li>
            <li>
                <label>Skill</label>
                @Html.DropDownListFor(m =>m.SkillID ,new SelectList(ViewBag.Skills,"ID","Skill"), "--Select--")
            </li>

        </ol>
        <input type="submit" value="Register" />
    </fieldset>
